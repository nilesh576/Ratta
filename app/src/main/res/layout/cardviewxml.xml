<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/cardlayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingHorizontal="20dp"
    android:layout_marginHorizontal="40dp"
    android:layout_marginVertical="20dp"
    android:background="@drawable/chapterview">
    <TextView
        android:id="@+id/cheptername"
        android:text="chapter1"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:onClick="func"/>

    <TextView
        android:id="@+id/totalquestion"
        android:text="total x quetion"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:onClick="func"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/addques"
            android:textSize="11sp"
            android:text="Add Question"
            android:textColor="#000000"
            android:background="@drawable/buttons_on_rec_view"
            android:layout_marginHorizontal="3dp"
            android:layout_marginVertical="4dp"
            android:paddingHorizontal="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <Button
            android:id="@+id/deleteques"
            android:text="Delete Chapter"
            android:textSize="11sp"
            android:textColor="#000000"
            android:background="@drawable/buttons_on_rec_view"
            android:layout_marginHorizontal="3dp"
            android:layout_marginVertical="4dp"
            android:paddingHorizontal="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


<!--        <Button-->
<!--            android:id="@+id/updateChapNamebtn"-->
<!--            android:layout_marginHorizontal="3dp"-->
<!--            android:paddingHorizontal="5dp"-->
<!--            android:layout_marginVertical="4dp"-->
<!--            android:text="Update Name"-->
<!--            android:textColor="#000000"-->
<!--            android:backgroundTint="#00FFFFFF"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_weight="33"/>-->
    </LinearLayout>
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="3dp"
        android:text="long press to rename\nclickchapter name to share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>